# Netlify Headers Configuration
# Smart Caching: Cache for performance, revalidate on updates

# Global headers for all pages
/*
  # Security Headers
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self'

# HTML pages - Cache but always revalidate for fresh content
/*.html
  Cache-Control: no-cache
  Vary: Accept-Encoding

# Index pages in directories - Cache but revalidate
/*/
  Cache-Control: no-cache
  Vary: Accept-Encoding

# Root index
/
  Cache-Control: no-cache
  Vary: Accept-Encoding

# CSS files - Cache with revalidation
/assets/css/*
  Cache-Control: no-cache
  Content-Type: text/css; charset=utf-8

# JavaScript files - Cache with revalidation
/assets/js/*
  Cache-Control: no-cache
  Content-Type: application/javascript

# Images - Long cache (versioned by filename changes)
/assets/images/*
  Cache-Control: public, max-age=31536000, immutable

# Favicon
/favicon.svg
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/svg+xml

# Specific page routes
/index.html
  Cache-Control: no-cache

/apk/
  Cache-Control: no-cache

/ios/
  Cache-Control: no-cache

/mac/
  Cache-Control: no-cache

/windows/
  Cache-Control: no-cache

/blogs/
  Cache-Control: no-cache

/blogs/*
  Cache-Control: no-cache

/privacy/
  Cache-Control: no-cache

/terms/
  Cache-Control: no-cache

/disclaimer/
  Cache-Control: no-cache
