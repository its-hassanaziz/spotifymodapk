# Netlify Headers Configuration
# Force no caching on all HTML pages for instant updates

# Global headers for all pages - AGGRESSIVE NO CACHE
/*
  # Security Headers
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self'
  # Browser cache control
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0
  # Netlify CDN edge cache control - force revalidation
  Netlify-CDN-Cache-Control: no-store
  CDN-Cache-Control: no-store
  Surrogate-Control: no-store
  # Vary header to prevent cached versions
  Vary: Accept-Encoding, Accept

# HTML pages - Force absolute no cache everywhere
/*.html
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0, s-maxage=0
  Pragma: no-cache
  Expires: 0
  Netlify-CDN-Cache-Control: no-store
  CDN-Cache-Control: no-store
  Surrogate-Control: no-store

# Index pages in directories
/*/
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0, s-maxage=0
  Pragma: no-cache
  Expires: 0
  Netlify-CDN-Cache-Control: no-store

# Root index
/
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0, s-maxage=0
  Pragma: no-cache
  Expires: 0
  Netlify-CDN-Cache-Control: no-store

# CSS files - NO CACHE to ensure fresh styles
/assets/css/*
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0
  Netlify-CDN-Cache-Control: no-store
  Content-Type: text/css; charset=utf-8

# JavaScript files - NO CACHE for updates
/assets/js/*
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0
  Pragma: no-cache
  Expires: 0
  Netlify-CDN-Cache-Control: no-store
  Content-Type: application/javascript

# Images - Short cache (can be updated)
/assets/images/*
  Cache-Control: public, max-age=3600
  Netlify-CDN-Cache-Control: public, max-age=3600

# Favicon
/favicon.svg
  Cache-Control: public, max-age=86400
  Content-Type: image/svg+xml

# Specific page routes
/index.html
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0, s-maxage=0
  Pragma: no-cache
  Expires: 0
  Netlify-CDN-Cache-Control: no-store

/apk/
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0, s-maxage=0
  Pragma: no-cache
  Expires: 0
  Netlify-CDN-Cache-Control: no-store

/apk/index.html
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0, s-maxage=0
  Pragma: no-cache
  Expires: 0
  Netlify-CDN-Cache-Control: no-store

/ios/
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0, s-maxage=0
  Pragma: no-cache
  Netlify-CDN-Cache-Control: no-store

/mac/
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0, s-maxage=0
  Pragma: no-cache
  Netlify-CDN-Cache-Control: no-store

/windows/
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0, s-maxage=0
  Pragma: no-cache
  Netlify-CDN-Cache-Control: no-store

/blogs/
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0, s-maxage=0
  Pragma: no-cache
  Netlify-CDN-Cache-Control: no-store

/blogs/*
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0, s-maxage=0
  Pragma: no-cache
  Netlify-CDN-Cache-Control: no-store

/privacy/
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0, s-maxage=0
  Pragma: no-cache
  Expires: 0
  Netlify-CDN-Cache-Control: no-store
